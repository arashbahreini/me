{
  "database": {
    "rules": "database.rules.json"
  },
  "hosting": {
    "public": "dist/firebase-CD-project",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/user/create",
        "function": "app"
      },
      {
        "source": "/user/login",
        "function": "app"
      },
      {
        "source": "/user/createCustomToken",
        "function": "app"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  },
  "functions": {
    "predeploy": [
      "npm --prefix \"$RESOURCE_DIR\" run lint"
    ]
  }
}
